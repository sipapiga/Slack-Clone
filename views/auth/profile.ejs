<%- include("../includes/head.ejs") %>

<body>
  <%- include("../includes/nav.ejs") %>
  <main>
    <div class="container text-center mt-5">
      <div class="row mt-5">
        <div class="col-md-4">
          <% if(user.imageUrl === undefined) { %>
          <img
            src="https://images.unsplash.com/photo-1536164261511-3a17e671d380?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=630&q=80"
            alt="" class="img-fluid" height="400" width="400" />
          <% } else { %>
          <img src="/<%=user.imageUrl%>" alt="" class="img-fluid" height="400" width="400" /><%}%>
          <form action="/profile" method="POST" enctype="multipart/form-data">
            <div class="form-group mt-2">
              <input
                type="file"
                name="image"
                class="form-control-file"
                id="image"
              />
            </div>
            <input type="hidden" value="<%= user._id%>" />
          <button class="btn btn-primary" type="submit">Save</button>
          </form>
        </div>
        <div class="col-md-6">
          <h1>User Profile</h1>
          <div class="text-left pl-5">
            <p class="lead pt-4"> <span class="font-weight-bold">Name:</span> <%= user.name %> </p>
            <p class=" lead pt-4"> <span class="font-weight-bold">Email:</span> <%= user.email %></p>
          </div>
        </div>
      </div>
    </div>
  </main>
  <%- include("../includes/end.ejs") %>
</body>