<%- include("../includes/head.ejs") %>
<body>
  <%- include("../includes/nav.ejs") %>

  <main>
    <% if(errorMessage) { %>
    <div class="container">
      <div class="row justify-content-center mt-2">
        <p class="text-align-center lead font-weight-bolder px-2 py-1">
          <%= errorMessage %>
        </p>
      </div>
    </div>
    <% } %>
    <div class="container mt-5">
      <div class="row">
        <div class="col-md-5 offset-3 ">
          <form action="/login" method="POST">
            <div class="form-group">
              <label for="email">E-mail</label>
              <input
                type="email"
                name="email"
                class="form-control <%=
                validationErrors.find(e => e.param === 'email') ? 'is-invalid':
                ''%>"
                id="email"
                value="<%= oldInput.email %>"
              />
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input
                type="password"
                name="password"
                class="form-control <%=
                validationErrors.find(e => e.param === 'password') ? 'is-invalid':
                ''%>"
                id="password"
                value="<%= oldInput.password %>"
              />
            </div>

            <button class="btn btn-primary" type="submit">Login</button>
          </form>
          <div class="row justify-content-center">
            <a href="/reset" class=" btn btn-outline-success m-3"
              >Reset Password</a
            >
          </div>
        </div>
      </div>
    </div>
  </main>
  <%- include("../includes/end.ejs") %>
</body>
